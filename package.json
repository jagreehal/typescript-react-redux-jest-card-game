{
  "name": "typescript-react-redux-jest-card-game",
  "version": "1.0.0",
  "author": "Jag Reehal",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "predev": "tsc",
    "dev": "concurrently \"npm run watch:tsc\" next",
    "prestart": "rimraf pages/*.js && tsc -p tsconfig-prod.json && next build",
    "start": "next start",
    "tsc": "tsc",
    "test": "jest",
    "watch:test": "jest --watch",
    "watch:tsc": "tsc --watch"
  },
  "dependencies": {
    "next": "^2.1.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.9",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.13",
    "@types/react": "^15.0.22",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.39",
    "concurrently": "^3.4.0",
    "enzyme": "^2.8.2",
    "jest": "^19.0.2",
    "react-addons-test-utils": "^15.5.1",
    "redux-mock-store": "^1.2.3",
    "ts-jest": "^19.0.10",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-microsoft-contrib": "^4.0.1",
    "tslint-react": "^2.6.0",
    "typescript": "^2.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ]
  }
}
