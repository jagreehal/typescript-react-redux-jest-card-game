{
  "name": "typescript-react-redux-jest-card-game",
  "version": "1.0.0",
  "author": "Jag Reehal",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "predev": "tsc",
    "dev": "concurrently \"npm run watch:tsc\" next",
    "prestart": "rimraf pages/*.js && tsc -p tsconfig-prod.json && next build",
    "start": "next start",
    "tsc": "tsc",
    "test": "jest",
    "watch:test": "jest --watch",
    "watch:tsc": "tsc --watch"
  },
  "dependencies": {
    "next": "^4.1.3",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.1",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/react-redux": "^5.0.11",
    "concurrently": "^3.5.0",
    "enzyme": "^3.1.0",
    "jest": "^21.2.1",
    "react-addons-test-utils": "^15.6.2",
    "redux-mock-store": "^1.3.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ]
  }
}
